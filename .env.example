# Server Configuration
# Port for the Express server
PORT=3000

# SSI API Configuration
# Base URL for ShootnScoreIt.com API
# Default: https://shootnscoreit.com
SSI_API_BASE_URL=https://shootnscoreit.com

# Cache Configuration
# Cache TTL (Time To Live) in milliseconds
# Default: 300000 (5 minutes)
CACHE_TTL=300000

# Fetch Timeout Configuration
# Timeout for external API requests in milliseconds
# Default: 60000 (60 seconds)
FETCH_TIMEOUT=60000

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Feature Flags
# Enable ESS (ECM text parsing) feature
# Set to 'true' or '1' to enable, 'false' or '0' to disable
ESS_FEATURE_ENABLED=false
