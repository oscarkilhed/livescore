{
  "name": "livescore",
  "version": "1.0.0",
  "description": "A web application for calculating and comparing IPSC (International Practical Shooting Confederation) live scores from ShootnScoreIt.com and ECM text files",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx ts-node src/index.ts",
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:docker": "cd src/server && npm test -- docker-build.test.ts",
    "lint": "cd src/server && npm run lint",
    "lint:fix": "cd src/server && npm run lint:fix",
    "client:dev": "vite",
    "client:build": "tsc && vite build",
    "client:preview": "vite preview",
    "server:dev": "npx ts-node src/index.ts",
    "server:test": "cd src/server && npm test",
    "server:lint": "cd src/server && npm run lint",
    "server:lint:fix": "cd src/server && npm run lint:fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "ipsc",
    "shooting",
    "scores",
    "livescore",
    "shootnscoreit",
    "ecm",
    "practical-shooting",
    "score-calculator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.7.0",
    "playwright": "^1.57.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
